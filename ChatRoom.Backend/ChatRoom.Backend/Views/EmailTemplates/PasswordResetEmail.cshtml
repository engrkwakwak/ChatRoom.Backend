@using Shared.DataTransferObjects.Email;
@using Microsoft.AspNetCore.Http;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model PasswordResetEmailViewModel

<div>
    <h3>Hello @Model.User.DisplayName,</h3>
    <p>We received a request to reset the password for your account. If you did not make this request, please ignore this email.</p>
    <p>To reset your password, please click on the link below:</p>
    <a href="@Model.PasswordResetLink"
        style="
            color: white; 
            background: black; 
            padding: .7rem;
            border-radius: 0.3rem;
            font-style: normal;
            outline: none;">
        Reset Password
        
    </a>
    <p>This link will expire in 24 hours for security purposes. If you need further assistance, please contact our support team.</p>
    <p>
        Best regards,<br />
        <span class="fw-bold">The Chatroom Team</span>
    </p>
</div>