<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
      internalLogFile=".\internal_logs\internallog.txt">
	<extensions>
		<add assembly="NLog.Mongo"/>
	</extensions>
	<targets>
		<target xsi:type="Mongo" name="mongo" databaseName="chatroom-logs" collectionName="Log" connectionString="mongodb+srv://carlmarion:1JCegm7iMSxec2Zj@cluster-gaoshou.m6ongcv.mongodb.net/?retryWrites=true&amp;w=majority&amp;appName=Cluster-GaoShou">
			<field name="Date" layout="${date}" />
			<field name="Level" layout="${level}" />
			<field name="Logger" layout="${logger}" />
			<field name="Message" layout="${message}" />
			<field name="Exception" layout="${exception:format=ToString}" />
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="mongo" />
	</rules>
</nlog>


